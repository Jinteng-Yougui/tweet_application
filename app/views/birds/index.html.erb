<table>
<% @birds.each do |bird| %>
  <tr>
    <td><%= bird.content %></td>
    <td><%= link_to 'つぶやいた内容を確認する', bird_path(bird.id) %></td>
    <td><%= link_to "つぶやいた内容を編集する", edit_bird_path(bird.id) %></td>
    <td><%= link_to "つぶやいた内容を削除する", bird_path(bird.id), method: :delete, data: {confirm: '本当に削除しても良いですか？'} %></td>
  </tr>
<% end %>
</table>

<%= link_to '新規つぶやき作成', new_bird_path %>